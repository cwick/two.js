# A sample Guardfile
# More info at https://github.com/guard/guard#readme

notification :growl
guard 'coffeescript', input: 'editor', output: 'build/editor', all_on_start: true
guard 'coffeescript', input: 'spec', output: 'build/spec', all_on_start: true
guard 'coffeescript', input: 'src', output: 'build', all_on_start: true
guard 'sass', :input => 'editor', :output => 'build', all_on_start: true
